
<!DOCTYPE html>
<html>
  <head>
    <title>We Read Truth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:title" content="We Read Truth" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="A website where users can journal their devotionals using the 'She Reads Truth' and 'He Reads Truth' content." />
    <meta property="og:image" content="<%= image_url("we_read_truth.png") %>" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag image_url('wrt_logo_white.png') %>

    <script type="text/javascript" src="http://l2.io/ip.js?var=session_id"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-175882692-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-175882692-1',  {
      'session_id' : 'session_id'
    });
    </script>


   <script type="text/javascript">
    window.esv_one = "<%= Rails.application.credentials.esv[:api_one] %>"
    window.esv_two = "<%= Rails.application.credentials.esv[:api_two] %>"
    window.esv_three = "<%= Rails.application.credentials.esv[:api_three] %>"
    window.esv_four = "<%= Rails.application.credentials.esv[:api_four] %>"
    window.esv_five = "<%= Rails.application.credentials.esv[:api_five] %>"
    window.esv_six = "<%= Rails.application.credentials.esv[:api_six] %>"
   </script>

    <script src='https://kit.fontawesome.com/cac26a4ea7.js' crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet"> 
    <meta http-equiv=“X-UA-Compatible” content=“IE=edge”>
    <script type='text/javascript'>
      window.logo = "<%= image_url('wrt_banner.png') %>";
      window.search_icon = "<%= image_url('search_icon.png') %>";
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
